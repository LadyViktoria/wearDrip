<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceScreen

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:icon="@drawable/ic_timeline_white_24dp"
        android:title="@string/title_chart_settings">

        <ListPreference
            android:defaultValue="12"
            android:entries="@array/chart_timeframe"
            android:entryValues="@array/chart_timeframe_values"
            android:icon="@drawable/ic_history_white_24dp"
            android:key="chart_timeframe"
            android:title="@string/title_chart_timeframe"
            app:wear_entryIcons="@array/icons_chart_timeframe" />

        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_multiline_chart_white_24dp"
            android:key="chart_cubic"
            android:summaryOff="@string/chart_cubic__hide"
            android:summaryOn="@string/chart_cubic_show"
            android:title="@string/title_chart_cubic"
            app:wear_iconOff="@drawable/ic_timeline_white_24dp"
            app:wear_iconOn="@drawable/ic_multiline_chart_white_24dp"
            app:wear_summaryOff="@string/chart_cubic__hide"
            app:wear_summaryOn="@string/chart_cubic_show" />
    </PreferenceScreen>

    <PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
        android:icon="@drawable/ic_notifications_white_24dp"
        android:title="@string/title_notifications">

        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_notifications_white_24dp"
            android:key="notifications"
            android:title="@string/title_notifications"
            app:wear_iconOff="@drawable/ic_notifications_off_white_24dp"
            app:wear_iconOn="@drawable/ic_notifications_white_24dp" />

        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_vibration_white_24dp"
            android:key="vibration"
            android:title="@string/title_vibration" />

    </PreferenceScreen>

</PreferenceScreen>

